<%- include('partials/header', { title: 'Login - MedSynQ', user: user, tenantName: tenantName, error: error }) %>

<h2>Login</h2>
<p>Enter your organisation name and credentials to continue.</p>
<form action="/login" method="post" class="form">
  <label for="tenantName">Organisation Name</label>
  <input type="text" id="tenantName" name="tenantName" value="<%= typeof tenantName !== 'undefined' ? tenantName : '' %>" required>

  <label for="email">Email</label>
  <input type="email" id="email" name="email" required>

  <label for="password">Password</label>
  <input type="password" id="password" name="password" required>

  <button type="submit" class="btn">Log In</button>
</form>

<%- include('partials/footer') %>